{
  "name": "Syllabus for Incremental CIFAR-100.",
  "author": "Gido van de Ven <ven@bcm.edu>",
  "contains": "datasets",
  "default_params": {"batch_size": 256},
  "instructions": [
    {"$phase": "train", "enable_updates": true},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["aquatic_mammals", "fish"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["flowers", "food_containers"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["fruit_and_vegetables", "household_electrical_devices"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["household_furniture", "insects"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["large_carnivores", "large_man-made_outdoor_things"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["large_natural_outdoor_scenes", "large_omnivores_and_herbivores"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["medium_mammals", "non-insect_invertebrates"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["people", "reptiles"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["small_mammals", "trees"]}, "count": 100},
    {"$repeat": {"$dataset": "$l2datakit.l2data:CIFAR100TrainFineLabels", "num_batches": 20,
      "coarse_labels": ["vehicles_1", "vehicles_2"]}, "count": 100},

    {"$phase": "test_per_block", "enable_updates": false},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["aquatic_mammals", "fish"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["flowers", "food_containers"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["fruit_and_vegetables", "household_electrical_devices"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["household_furniture", "insects"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["large_carnivores", "large_man-made_outdoor_things"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["large_natural_outdoor_scenes", "large_omnivores_and_herbivores"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["medium_mammals", "non-insect_invertebrates"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["people", "reptiles"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["small_mammals", "trees"]},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 20,
      "coarse_labels": ["vehicles_1", "vehicles_2"]},

    {"$phase": "test_all", "enable_updates": false},
    {"$dataset": "$l2datakit.l2data:CIFAR100TestFineLabels", "num_batches": 50}
  ]
}
